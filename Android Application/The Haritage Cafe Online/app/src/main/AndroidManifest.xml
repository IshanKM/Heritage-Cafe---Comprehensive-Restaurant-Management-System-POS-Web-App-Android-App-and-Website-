<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iksoft.recyclview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/logoapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Loading_Screen" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".deleteconfirm"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Yourdetails" android:screenOrientation="portrait" />
        <activity
            android:name=".logoutconfirm"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Aboutus" android:screenOrientation="portrait"/>
        <activity
            android:name=".Menu"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Payment" android:screenOrientation="portrait"/>
        <activity
            android:name=".Confirm"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".loginactivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".RegisterActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".Qtydetails"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Addtocart" />
        <activity
            android:name=".Mainscreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Popupdetails"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".itemshow"
            android:screenOrientation="portrait"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>